<div class="modal fade" id="editStoreModal" role="dialog" tabindex="-1" aria-labelledby="editStoreModalLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editStoreModalLabel">Edit Store</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form data-bind="with: store()">
                    <div class="form-group">
                        <label for="editStoreName">Name</label>
                        <input data-bind="value: $data.name, valueUpdate:'keyup'" class="form-control" id="editStoreName">
                    </div>
                    <div class="form-group">
                        <label for="editStoreAddress">Address</label>
                        <input data-bind="value: $data.address, valueUpdate:'keyup'" class="form-control" id="editStoreAddress">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button data-bind="click:editStore" class="btn btn-success">Save Changes</button>
            </div>
        </div>
    </div>

</div>

