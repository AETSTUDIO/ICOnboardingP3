<div class="modal fade" id="editProductSoldModal" role="dialog" tabindex="-1" aria-labelledby="editProductSoldModalLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductSoldModalLabel">Edit Sales Record</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form data-bind="with: selectedProductSold()">
                    <div class="form-group">
                        <label for="NewProductSoldCustomerName"><strong>Customer Name: </strong></label>
                        <select class="form-control" id="NewProductSoldCustomerName" data-bind="
                                    options: $parent.customerList,
                                    optionsText: 'name',
                                    optionsValue: 'id',
                                    value: customerId"></select>
                    </div>
                    <div class="form-group">
                        <label for="newProductSoldProductName"><strong>Product Name: </strong></label>
                        <select class="form-control" id="NewProductSoldProductName" data-bind="
                                    options: $parent.productList,
                                    optionsText: 'name',
                                    optionsValue: 'id',
                                    value: productId"></select>
                    </div>
                    <div class="form-group">
                        <label for="newProductSoldStoreName"><strong>Store Name: </strong></label>
                        <select class="form-control" id="NewProductSoldStoreName" data-bind="
                                    options: $parent.storeList,
                                    optionsText: 'name',
                                    optionsValue: 'id',
                                    value: storeId"></select>
                    </div>
                    <div class="form-group">
                        <label for="newProductSoldDate"><strong>Date Sold: </strong></label>
                        <input data-bind="value: dateSold" class="form-control" id="newProductSoldDate">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-bind="click: getAllData" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button data-bind="click:editProductSold" class="btn btn-success">Save Changes</button>
            </div>
        </div>
    </div>

</div>

